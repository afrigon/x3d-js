{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
		"resolveJsonModule": true,
        "strict": true,
		"declaration": true,
		"declarationMap": true,
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": ["src"]
}